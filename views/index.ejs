<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> <%= title %></title>
</head>
<body>
  <nav>
    <div class = "site title">
        <a href="/">Blog</a>
        <p>A Blogging Application</p>
    </div>
    <ul>
        <li><a href='/'>Home</a></li>
        <li><a href='/about'>About</a></li>
        <li><a href='/blogs/create'>New Blog</a></li>
    </ul>
  </nav>

  <div class="blogs content">
    <h2>All Blogs</h2>
    <% if (blogs.length>0) { %>
        <% blogs.forEach(blog =>{ %>
            <h3><%= blog.title %></h3>
            <p><%= blog.snippet %></p>
        <% }) %>
    <% }else { %>
        <p>There are no blogs to display</p>
    <% } %>
  </div>


</body>
</html>